@model EmpresaImportadoraDC.ViewModels.PaqueteViewModel

@{
    ViewData["Title"] = "Detalle";
    Layout = null;
}

<div class="container-fluid align-content-center">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CrearPaquete" enctype="multipart/form-data">
                <input type="hidden" asp-for="PaqueteId" />
                <input type="hidden" asp-for="NoGuiaCO" />
                <input type="hidden" asp-for="TransportadoraCO" />
                <input type="hidden" asp-for="ValorTotal" />
                <input type="hidden" asp-for="EstadoId" />
                <input type="hidden" asp-for="RutaImagen" />
                <input type="hidden" asp-for="Codigo" />               

                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="PesoLibras" class="control-label"></label>
                    <input asp-for="PesoLibras" class="form-control" />
                    <span asp-validation-for="PesoLibras" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Cliente</label>
                    <select asp-items="ViewBag.ListaClientes" asp-for="ClienteId" class="form-control"></select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NoGuiaUSA" class="control-label"></label>
                    <input asp-for="NoGuiaUSA" class="form-control" />
                    <span asp-validation-for="NoGuiaUSA" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TransportadoraUSA" class="control-label"></label>
                    <select asp-items="ViewBag.ListaTransportadoraUSA" asp-for="TransportadoraUSA" class="form-control"></select>
                    <span asp-validation-for="TransportadoraUSA" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Tipo de mercancía</label>
                    <select asp-items="ViewBag.ListaMercancia" asp-for="MercanciaId" class="form-control"></select>
                    <span asp-validation-for="MercanciaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Imagen" class="form-label" ></label><br/>
                    <input type="file" asp-for="Imagen" accept="image/*" />
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br/>
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}