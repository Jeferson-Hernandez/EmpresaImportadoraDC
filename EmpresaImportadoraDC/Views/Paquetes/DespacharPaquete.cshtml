@model EmpresaImportadoraDC.Models.Entities.Paquete

@{
    ViewData["Title"] = "Detalle";
}

<section class="content">
    <div class="container-fluid">
        <br />
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">DESPACHAR PAQUETE</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="Paquetes">Inicio</a></li>
                    <li class="breadcrumb-item active">Despachar paquete</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="DespacharPaquete" asp-route-id="@Model.PaqueteId" enctype="multipart/form-data">
                <input type="hidden" asp-for="PaqueteId" />
                <input type="hidden" asp-for="NoGuiaUSA" />
                <input type="hidden" asp-for="TransportadoraUSA" />
                <input type="hidden" asp-for="ValorTotal" />
                <input type="hidden" asp-for="Estado" />
                <input type="hidden" asp-for="RutaImagen" />
                <input type="hidden" asp-for="Codigo" />
                <input type="hidden" asp-for="PesoLibras" />
                <input type="hidden" asp-for="ClienteId" />
                <input type="hidden" asp-for="MercanciaId" />

                <div asp-validation-summary="ModelOnly"></div>                
                <div class="form-group">
                    <label asp-for="NoGuiaCO" class="control-label"></label>
                    <input asp-for="NoGuiaCO" class="form-control" />
                    <span asp-validation-for="NoGuiaCO" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TransportadoraCO" class="control-label"></label>
                    <input asp-for="TransportadoraCO" class="form-control" />
                    <span asp-validation-for="TransportadoraCO" class="text-danger"></span>
                </div>   
                <div class="form-group">
                    <input type="submit" value="Despachar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>