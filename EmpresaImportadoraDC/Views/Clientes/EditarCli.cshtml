@model EmpresaImportadoraDC.Models.Entities.Cliente

@{
    ViewData["Title"] = "EditarCliente";
    Layout = null;
}
<br />
<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Editar cliente</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-action="index" asp-controller="Clientes">Inicio</a></li>
                <li class="breadcrumb-item active">Editar cliente</li>
            </ol>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarCli">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <div class="form-group">
                <label asp-for="NumeroCasillero" class="control-label"></label>
                <input asp-for="NumeroCasillero" class="form-control" readonly="readonly" />
                <span asp-validation-for="NumeroCasillero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCliente" class="control-label"></label>
                <input asp-for="NombreCliente" class="form-control" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DireccionEntrega" class="control-label"></label>
                <input asp-for="DireccionEntrega" class="form-control" />
                <span asp-validation-for="DireccionEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
