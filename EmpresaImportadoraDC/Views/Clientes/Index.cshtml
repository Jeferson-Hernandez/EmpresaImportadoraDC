@model IEnumerable<EmpresaImportadoraDC.Models.Entities.Cliente>
@{
    ViewData["Title"] = "Index";
}

<section class="content">
    <div class="container-fluid">
        <br />
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">CLIENTES</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item active">Clientes</li>
                </ol>
            </div>
        </div>
        <br />
        <p>
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-user-plus"></i>Registrar cliente</a>
        </p>
        <table class="table" id="tabla">
            <thead>
                <tr>    
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroCasillero)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreCliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Correo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DireccionEntrega)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroCasillero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DireccionEntrega)
                    </td>
                    <td>
                        <a asp-action="EditarCliente" asp-route-id="@item.ClienteId">EditarCliente</a> |
                        <form asp-action="EliminarEmpleado" asp-route-id="@item.ClienteId" class="d-inline">
                            <button type="submit" onclick="confirm('¿Desea eliminar este registro?')" class="btn btn-danger"><i class="fas fa-user-minus"></i>Eliminar</button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
</section>